---
import { Image, Picture } from "astro:assets";
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from "@images/post-05.png";
---

<MainLayout title="Images">
    <h1 class="text-5xl">Images</h1>

    <img
        loading="eager"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    />

    <Image
        loading="eager"
        src={post05Img}
        quality="high"
        width="250"
        height="250"
        alt="Post 05"
    />

    <h1>Picture</h1>
    <Picture src={post05Img} width="250" height="250" alt="Post 05" />

    <div
        style={{
            height: "3000px",
        }}
    >
    </div>

    <img
        loading="lazy"
        src="/assets/images/post-05.png"
        width="250"
        height="250"
    />
</MainLayout>
